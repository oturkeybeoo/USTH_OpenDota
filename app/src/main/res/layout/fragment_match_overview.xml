                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/match_overview_dire_kda_1"
                                android:layout_width="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0/0/0"
                                android:textColor="@color/white" />

                        </TableRow>

                        <TableRow>

                            <ImageView
                                android:id="@+id/match_overview_dire_avatar_2"
                                android:layout_width="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:gravity="center"

                                android:src="@drawable/dire_logo_1" />

                            <TextView
