                android:textColor="@color/white"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:background="@color/gray">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/dire_logo"
